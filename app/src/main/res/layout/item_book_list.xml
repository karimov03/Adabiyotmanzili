<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="144dp">

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/card_style"
        android:src="@drawable/image_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:maxLength="100"
        android:text="Ружья, микробы и сталь. История человеческих сообществ"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_book"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_after_name"
        android:layout_width="170dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:maxLength="20"
        android:text="Ружья, микробы "
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_book"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name" />

    <ImageView
        android:id="@+id/image_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/image_book"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textColor="#FF9E0C"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_star"
        app:layout_constraintStart_toEndOf="@+id/image_star"
        app:layout_constraintTop_toBottomOf="@+id/tv_after_name" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_more_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>